{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run VS Code extension",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/ext",
                "${workspaceFolder}/"
            ]
        }
    ]
}
